<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.7dp"
            android:layout_marginRight="10.7dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/home_item_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/item_icon" />

            <TextView
                android:id="@+id/home_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.3dp"
                android:layout_toRightOf="@+id/home_item_icon"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Easycash" />

            <TextView
                android:id="@+id/home_item_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.3dp"
                android:layout_toRightOf="@+id/home_item_title"
                android:drawablePadding="1.3dp"
                android:drawableRight="@mipmap/item_star"
                android:textColor="@color/orange"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="4.9" />

            <TextView
                android:id="@+id/home_item_end"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_txt_square_red"
                android:text="Ajukan"
                android:textColor="@color/text_item_edge"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/home_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29.3dp"
                android:layout_marginTop="8.7dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Rp 1.000.000" />

            <TextView
                android:id="@+id/home_item_detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_item_price"
                android:layout_marginLeft="29.3dp"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxEms="12"
                android:singleLine="true"
                android:textColor="@color/text_item_color"
                android:textSize="12sp"
                tools:text="Bunga>=1.00%/Hari" />

            <TextView
                android:id="@+id/home_item_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/home_item_detail1"
                android:layout_toRightOf="@+id/home_item_detail1"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@mipmap/ic_time"
                android:drawablePadding="2.7dp"
                android:textColor="@color/text_item_color"
                android:textSize="12sp"
                tools:text="Proses 2Hari" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>