<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_net_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    >



    <TextView
        android:id="@+id/content_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/tip1_str_new"
        android:textSize="18sp"
        tools:text="@string/tip1_str_new"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/net_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:background="@drawable/by_select_grey_no_net"
        android:paddingBottom="12dp"
        android:paddingEnd="52dp"
        android:paddingStart="52dp"
        android:paddingTop="12dp"
        android:text="@string/click_refresh_str_new"
        android:textColor="@color/orange"
        android:textSize="18sp"
        tools:text="@string/click_refresh_str_new"/>
</LinearLayout>