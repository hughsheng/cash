<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_borrow_type"
            android:layout_width="106.7dp"
            android:layout_height="16.7dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_borrow_type_description"
            android:layout_width="106.7dp"
            android:layout_height="16.7dp"
            android:layout_marginTop="2.7dp"
            android:gravity="center"
            android:textSize="6.7sp"
            tools:text="jumlah" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_borrow_price"
            android:layout_width="106.7dp"
            android:layout_height="16.7dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_borrow_price_description"
            android:layout_width="106.7dp"
            android:layout_height="16.7dp"
            android:layout_marginTop="2.7dp"
            android:gravity="center"
            android:textSize="6.7sp"
            tools:text="Waktu" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_borrow_time"
            android:layout_width="106.7dp"
            android:layout_height="16.7dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/borrow_time_description"
            android:layout_width="106.7dp"
            android:layout_height="16.7dp"
            android:layout_marginTop="2.7dp"
            android:gravity="center"
            android:textSize="6.7sp"
            tools:text="Waktu" />
    </LinearLayout>
</LinearLayout>