<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.7dp"
        android:layout_marginRight="10.7dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/home_item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/item_icon" />

        <TextView
            android:id="@+id/home_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.3dp"
            android:layout_toRightOf="@+id/home_item_icon"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxEms="10"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="Easycash" />

        <TextView
            android:id="@+id/home_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.3dp"
            android:layout_toRightOf="@+id/home_item_title"
            android:drawablePadding="1.3dp"
            android:drawableRight="@mipmap/item_star"
            android:textColor="@color/orange"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="4.9" />

        <TextView
            android:id="@+id/home_item_end"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/bg_txt_square_red"
            android:paddingBottom="2.7dp"
            android:paddingLeft="5.3dp"
            android:paddingRight="5.3dp"
            android:paddingTop="2.7dp"
            android:textColor="@color/text_item_edge"
            android:textSize="14sp"
            android:text="Ajukan" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29.3dp"
            android:layout_marginTop="8.7dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Rp 1.000.000" />

        <TextView
            android:id="@+id/home_item_detail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginTop="8.7dp"
            android:maxEms="12"
            android:singleLine="true"
            android:ellipsize="end"
            android:drawableLeft="@mipmap/ic_bunga"
            android:drawablePadding="2.7dp"
            android:textColor="@color/text_item_color"
            android:textSize="12sp"
            tools:text="Bunga>=1.00%/Hari" />

        <TextView
            android:id="@+id/home_item_detail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/home_item_detail1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/home_item_detail1"
            android:layout_marginTop="2.7dp"
            android:drawableLeft="@mipmap/ic_time"
            android:drawablePadding="2.7dp"
            android:textColor="@color/text_item_color"
            android:textSize="12sp"
            tools:text="Proses 2Hari" />

        <TextView
            android:id="@+id/home_item_detail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_item_price"
            android:layout_marginLeft="33.3dp"
            android:layout_marginTop="2.7dp"
            android:drawablePadding="2.7dp"
            android:textColor="@color/text_item_color"
            android:textSize="10sp"
            android:text="Jumlah Maksimum" />

        <TextView
            android:id="@+id/home_item_dscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.7dp"
            android:layout_marginRight="10.7dp"
            android:layout_marginTop="10.7dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@+id/home_item_detail3"
            android:textSize="10sp"
            android:textColor="@color/gray"
            tools:text="Loremipsumdolorsitamet,consecteturadipiscingelit.Aeneaneuismodbibendumlaoreet" />
    </RelativeLayout>
</LinearLayout>

</LinearLayout>