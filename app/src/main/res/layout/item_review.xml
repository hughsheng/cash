<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10.7dp"
    >

    <com.tl.tplus.widges.CircularImage
        android:id="@+id/review_item_head"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/review_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.3dp"
        android:layout_toRightOf="@+id/review_item_head"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="A Goole User" />

    <TextView
        android:id="@+id/review_item_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/review_item_title"
        android:layout_alignBottom="@+id/review_item_head"
        android:layout_marginTop="5.3dp"
        android:drawableRight="@mipmap/item_star"
        android:textColor="@color/gray"
        android:textSize="10sp"
        tools:text="A Goole User" />

    <TextView
        android:id="@+id/review_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/review_item_star"
        android:layout_marginLeft="11.3dp"
        android:layout_toRightOf="@+id/review_item_star"
        android:textColor="@color/gray"
        android:textSize="10sp"
        tools:text="A Goole User" />

    <TextView
        android:id="@+id/review_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/review_item_title"
        android:layout_marginRight="10.7dp"
        android:layout_marginTop="5.3dp"
        android:layout_below="@+id/review_item_head"
        android:textColor="@color/black"
        android:textSize="10sp"
        tools:text="Gone backwards. Let us choose the default order. And not as screen overlayed on the order you want us to use. And now I can&apos;t see the notifications tab from the &apos;Most recent&apos; screen. Tapping on a friend&apos;s comment highlighted beneath a long thread doesn&apos;t take me to the comment." />
</RelativeLayout>